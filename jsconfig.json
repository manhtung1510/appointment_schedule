{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": ["es6"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "@assets": ["assets"],
            "@assets/*": ["assets/*"],
            "@component": ["src/components"],
            "@component/*": ["src/components/*"],
            "@screen": ["src/screens"],
            "@screen/*": ["src/screens/*"]
        }
    },
    "include": ["*", "src"],
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jsconfig.json"]
}
